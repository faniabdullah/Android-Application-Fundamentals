<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bangkit.faniabdullah_bfaa.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_navigation_home_to_searchFragment3"
            app:destination="@id/searchFragment3" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.bangkit.faniabdullah_bfaa.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_navigation_favorite_to_searchFragment3"
            app:destination="@id/searchFragment3" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment3"
        android:name="com.bangkit.faniabdullah_bfaa.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>